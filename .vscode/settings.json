{
  "workbench.colorCustomizations": {
    "activityBar.background": "#916066",
    "activityBar.inactiveForeground": "#FDDEA5"
  },
  "editor.codeActionsOnSave": {
    "source.fixAll": true
  },
  // using https://github.com/doi/fileheadercomment
  "fileHeaderComment.parameter": {
    "*": {
      "commentbegin": "/**",
      "commentprefix": " *",
      "commentend": " */",
      "author": "Kenichi Inoue <ao.akua.leo@gmail.com>"
    }
  },
  "fileHeaderComment.template": {
    "*": [
      "${commentbegin}",
      "${commentprefix} @file The Document",
      "${commentprefix} describe",
      "${commentprefix} @copyright @author ${author} ${year}.",
      "${commentend}"
    ]
  },
  "typescript.tsdk": "node_modules/typescript/lib"
}
